<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Students</h1>
<% @students.each do |student| %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th><%= link_to 'New Grade', new_grade_path(student_id: student.id) %></th>
      <th><%= link_to 'New Parent', new_parent_path(student_id: student.id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.email %></td>
    <td><%=  %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<thead>
    <tr>
      <th>Parent Name</th>
      <th>Parent Email</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% student.parents.each do |parent| %>
        <tr>
          <td><%= parent.name %></td>
          <td><%= parent.email %></td>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

</thead>
  <tr>
    <th>Date</th>
    <th>Assignment Name</th>
    <th>Grade</th>
    <th colspan="3"></th>
  </tr>
</thead>
  <% student.grades.each do |grade| %>
    <tr>
      <td><%= grade.date %></td>
      <td><%= grade.assignment_name %></td>
      <td><%= grade.grade %></td>
      <td><%= link_to 'Show', grade %></td>
      <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
      <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>

