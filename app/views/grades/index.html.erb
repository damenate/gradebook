<p id="notice"><%= notice %></p>

<h1>Grades</h1>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Assignment name</th>
      <th>Date</th>
      <% if session[:logged_in_teacher]%>
      <th>Student Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.date %></td>
        <td><%= grade.assignment_name %></td>
        <td><%= grade.grade %></td>
        <% if session[:logged_in_teacher]%>
          <td><%= grade.student_id %></td>
          <td><%= link_to 'Show', grade %></td>
          <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
          <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <%end%>
  </tbody>
</table>
<br>

<% if session[:logged_in_teacher]%>
 <%= link_to 'New Grade', new_grade_path %>
<% end %>
<p> <%=link_to 'Logout', login_path, method: "delete" %></p>
